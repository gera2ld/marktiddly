{
  "name": "marktiddly",
  "version": "0.2.2",
  "description": "Render Markdown files as tiddlers",
  "author": "Gerald <gera2ld@live.com>",
  "license": "MIT",
  "type": "module",
  "bin": "dist/bin.mjs",
  "main": "dist/bin.mjs",
  "scripts": {
    "ci": "run-s lint",
    "format": "prettier --write --plugin-search-dir=. .",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ext .ts,tsx src",
    "dev": "gulp dev",
    "clean": "gulp clean",
    "build:js": "cross-env NODE_ENV=production gulp build",
    "build": "run-s ci clean build:js",
    "prepare": "husky install",
    "prepublishOnly": "run-s build"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@babel/runtime": "^7.21.0",
    "commander": "^10.0.0",
    "express": "^4.18.2",
    "github-markdown-css": "^5.2.0",
    "globby": "^13.1.4",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "openpgp": "^5.8.0",
    "pako": "^2.1.0",
    "prismjs": "^1.29.0",
    "remarkable": "^2.0.1",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@gera2ld/plaid": "~2.5.6",
    "@gera2ld/plaid-common-ts": "~2.5.1",
    "@gera2ld/plaid-rollup": "~2.5.6",
    "@types/lodash-es": "^4.17.7",
    "@types/remarkable": "^2.0.3",
    "del": "^7.0.0",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.3",
    "rollup-plugin-browsersync": "^1.3.3",
    "rollup-plugin-vue": "^6.0.0"
  },
  "repository": "git@github.com:gera2ld/marktiddly.git"
}

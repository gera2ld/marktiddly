{
  "name": "marktiddly",
  "version": "0.3.1",
  "description": "Render Markdown files as tiddlers",
  "author": "Gerald <gera2ld@live.com>",
  "license": "MIT",
  "type": "module",
  "bin": "dist/bin.mjs",
  "main": "dist/bin.mjs",
  "scripts": {
    "ci": "run-s lint",
    "lint": "eslint --ext .ts,tsx . && prettier --check --ignore-path .eslintignore .",
    "lint:fix": "eslint --ext .ts,tsx . --fix && prettier --write --ignore-path .eslintignore .",
    "dev": "gulp dev",
    "dev:demo": "gulp demo",
    "clean": "gulp clean",
    "build:js": "cross-env NODE_ENV=production gulp build",
    "build": "run-s ci clean build:js",
    "prepare": "husky install",
    "prepublishOnly": "run-s build"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.1",
    "@unocss/reset": "^0.56.4",
    "commander": "^11.0.0",
    "express": "^4.18.2",
    "github-markdown-css": "^5.2.0",
    "globby": "^13.2.2",
    "highlight.js": "^11.8.0",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "openpgp": "^5.10.2",
    "pako": "^2.1.0",
    "remarkable": "^2.0.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@gera2ld/plaid": "~2.6.0",
    "@gera2ld/plaid-rollup": "~2.6.0",
    "@highlightjs/cdn-assets": "^11.8.0",
    "@types/lodash-es": "^4.17.9",
    "@types/remarkable": "^2.0.4",
    "@unocss/postcss": "^0.56.4",
    "del": "^7.1.0",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.3",
    "rollup-plugin-browsersync": "^1.3.3",
    "rollup-plugin-vue": "^6.0.0",
    "unocss": "^0.56.4"
  },
  "repository": "git@github.com:gera2ld/marktiddly.git"
}
